{
    "compilerOptions": {
      "moduleResolution": "node",
      "downlevelIteration": true,
      "target": "ES2018",
      "module": "es2020",
      "lib": [
        "es2017",
        "es2018",
        "dom"
      ],
      "strict": true,
      "sourceMap": true,
      "declaration": true,
      "declarationDir": "dist/types",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "outDir": "dist/lib",
      "typeRoots": [
        "node_modules/@types"
      ],
      "experimentalDecorators": true
    },
    "include": [
      "src",
    ]
  }